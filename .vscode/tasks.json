{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Remote SSE-RPC Server",
            "type": "deno",
            "command": "run",
            "args": [
                "-A",
                "-r",
                "--unstable",
                "https://raw.githubusercontent.com/nhrones/SSE-RPC/master/server.ts"
            ],
            "problemMatcher": [
                "$deno"
            ],
        },
        {
            "label": "Run LOCAL SSE-RPC Server",
            "type": "deno",
            "command": "run",
            "args": [
                "-A",
                "-r",
                "--unstable",
                "C:/Users/nhron/dev/devtools/SSE-RPC/server.ts"
            ],
            "problemMatcher": [
                "$deno"
            ],
        },
        {
         "label": "Run SSE-RPC Sample",
         "type":"shell",
         "command": "serve",
         "args": [
            "example"
         ],
         "problemMatcher": [
             "$deno"
         ],
     },
    ]
}